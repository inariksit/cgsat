name:                cgsat
version:             0.1.0.0
-- synopsis:            
-- description:         
-- license:             
license-file:        LICENSE
author:              Inari Listenmaa
maintainer:          inari@chalmers.se
-- copyright:           
category:            Language
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10


library
  exposed-modules:     CG_base, CG_SAT, CG_data, CG_parse
  other-modules:       CG.ErrM, Apertium.ErrM,
                       Apertium.Abs, Apertium.Lex, Apertium.Par,
                       CG.Abs, CG.Lex, CG.Par, CG.Print
--  other-extensions:    
  build-depends:       base >=4.6 && <4.7,
                       containers >=0.5 && <0.6,
                       minisat >=0.1 && <0.2,
                       satplus,
                       random-shuffle,
                       random,
                       mtl >=2.1 && <2.2,
                       array >=0.4 && <0.5

  -- hs-source-dirs:      
  ghc-options:         -O2
                       -threaded
                       -fprof-auto
                       -caf-all 
                       "-with-rtsopts=-N -p -s -h -i0.1"
  build-tools:         alex, happy
  default-language:    Haskell2010

executable cgsat
  hs-source-dirs:      executable
  main-is:             Main.hs
  build-depends:       base,
                       cgsat,
                       mtl,
                       minisat,
                       satplus,
                       random-shuffle,
                       array >=0.4 && <0.5,
                       containers
  default-language:    Haskell2010

executable test-cgsat
  hs-source-dirs:      test
  main-is:             Test.hs
  build-depends:       base,
                       cgsat,
                       mtl,
                       minisat,
                       satplus,
                       random-shuffle,
                       random,
                       array,
                       containers,
                       process

  default-language:    Haskell2010


Test-Suite qctest
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             QCTest.hs
  build-depends:       base,
                       cgsat,
                       minisat,
                       satplus,
                       QuickCheck
  default-language:    Haskell2010
