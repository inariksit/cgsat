LIST Te = "te" "om te" ;

SET PrnNotPers = (Prn OR PrnItg) - (pers);
SET DetNotZijn = (det) - Zijn;
SET DetPosNotZijn = DetPos - Zijn;
SET VerbInf = Verb + (inf) ;
SET PrTe = Pr + Te ;

